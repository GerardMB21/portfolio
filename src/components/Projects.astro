---
import NextIcon from "../icons/Nextjs.astro";
import TailwindIcon from "../icons/Tailwind.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: (NextIcon)
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: (TailwindIcon)
  }
};

const PROJECTS = [
  {
    title: "SVGL - A beautiful library with a SVG logos",
    description: "Create from scratch with Next.js and Tailwind CSS. It's a library with SVG logos from the most popular brands. Optimized from SEO and performance.",
    link: "https://svgl.vercel.app",
    github: "https://github.com/pheralb/svgl",
    image: "https://firebasestorage.googleapis.com/v0/b/gerard-matos.appspot.com/o/project-default-1000x563.webp?alt=media&token=8dc0be60-d536-4fcf-9639-45ccf035c11a",
    tags: [TAGS.NEXT, TAGS.TAILWIND]
  }
]
---

{
  PROJECTS.map(({ title, description, tags, image }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex flex-row gap-x-2 mb-2">
        {tags.map(tag => (<li>
          <span class={`flex gap-x-2 rounded-full text-xs font-semibold ${tag.class} py-1 px-2`}>
            <tag.icon class="size-4" />
            {tag.name}
          </span>
        </li>))}
      </ul>
      <img class="rounded shadow-2xl shadow-white/10" src={image} alt={`Captura de pantalla del proyecto ${image}`}>
    </article>
  ))
}